<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                                           

                 
                                
                                                                              

                 
                       
                                                         
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/fragment_knowledge_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_c9c9c9"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:tag="binding_1"       />

            <TextView
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="binding_2"                
                android:textSize="14sp"
                tools:text="content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:tag="binding_3"                                     
                                                     
                android:textSize="18sp"
                tools:text="1"
                app:drawableStartCompat="@drawable/icon_praise" />

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="@string/hint_change_content"
            android:tag="binding_4"                  />

    </LinearLayout>
         